<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <div class="flex flex-col min-h-screen px-4">
      <Nav />
      <main class="container grow w-full max-w-3xl md:mx-auto">
        <div class="menu flex flex-col items-center gap-20 md:my-24">
          <div class="flex flex-col items-start gap-8">
            <div class="flex flex-col items-start gap-2">
              <h1 class="text-6xl pb-1">{frontmatter.title}</h1>
              <h2 class="text-base">{frontmatter.description}</h2>
            </div>
            <div class="tags flex flex-row text-xs pb-1">
              {frontmatter.tags.map((tag) => <div class="pr-4">{tag}</div>)}
            </div>
            <img
              src={frontmatter.image.url}
              width="100%"
              alt={frontmatter.image.alt}
            />
          </div>
          <div
            class="detail-box flex flex-col items-start gap-10 py-8 px-4 text-sm"
          >
            <div class="line hidden md:flex"></div>
            <div class="md:inline-flex items-start gap-20">
              <div class="detail">
                <div class="detail-title">Role</div>
                <div class="detail-content">
                  {frontmatter.role.map((role) => <div>{role}</div>)}
                </div>
              </div>
              <div class="detail">
                <div class="detail-title">Team</div>
                <div class="detail-content">
                  {frontmatter.team.map((team) => <div>{team}</div>)}
                </div>
              </div>
              <div class="detail">
                <div class="detail-title">URL</div>
                <div class="detail-content">
                  {frontmatter.link}
                </div>
              </div>
            </div>
          </div>
        </div>
        <slot />
        <Footer />
        <script></script>
      </main>
    </div>
  </body>

  <style>
    h1 {
      font-family: "TT Fors";
      text-transform: uppercase;
      font-weight: 500;
      letter-spacing: -0.0125em;
      line-height: 0.9;
      transform: scaleY(1.05);
      /* font-size: clamp(3rem, 5vw, 5rem); */
      font-size: 3rem;
      margin: 0.5rem 0;
    }

    h2 {
      line-height: 1.1;
      font-weight: 400;
    }

    .tags {
      font-family: "TT Fors";
      text-transform: uppercase;
      font-weight: 500;
    }

    .detail-box {
      border: 1.5px solid var(--color-border-secondary);
    }

    .detail {
      margin-bottom: 0.5rem;
    }

    .detail-title {
      font-family: "TT Fors";
      text-transform: uppercase;
      font-weight: 500;
      padding-bottom: 0.5rem;
    }

    .line {
      width: 26px;
      border-bottom: 1.5px solid var(--color-border-secondary);
    }
  </style>
</html>
