<style>
    .accordion-wrap {
        position: relative;
        height: 60vh;
    }

    .accordion {
        position: absolute;
        width: 100%;
        bottom: 0;
        border-bottom: 1px solid black;
    }

    .button-border {
        border-top: 1px solid black;
    }

    .content-wrap {
        display: grid;
        grid-template-rows: 0fr;
        overflow: hidden;
        transition: grid-template-rows 0.4s ease-in-out;
        transition-delay: 50ms;
    }

    .content {
        align-self: start;
        min-height: 0;
        transition: visibility 1s;
        visibility: none;
        /* display: flex;
