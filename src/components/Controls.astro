---
import ThemeToggle from "./ThemeToggle.astro";
---


<footer class="">
    <div id="" class="hidden md:flex">Ray Xia</div>
  </footer>
  
  <style>
    footer {
      font-family: "TT Fors";
      z-index: 99;
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 100%;
      padding: 0.1rem 1rem 0.2rem;
    }
  
    .bg-white {
      background-color: #fff;
    }
  
    ul {
      justify-content: flex-end;
      list-style: none;
    }
  
    li {
      text-transform: uppercase;
      margin: 0;
    }
  
    #my-name {
      /* font-family: "LT Cushion"; */
      text-transform: uppercase;
      font-weight: 400;
      font-size: 0.8rem;
      letter-spacing: 0.4rem;
      position: absolute;
      left: calc(50% - 45px);
      color: var(--color-text-secondary);
    }
  
    a {
      transition: all 0.2s ease-in-out;
      border-bottom: solid transparent 1.5px;
      position: relative;
    }
  
    a:before {
      content: "";
      width: 0;
      height: 1.5px;
      background: var(--color-border-secondary);
      position: absolute;
      left: 0;
      bottom: 0;
      transition: all 0.2s ease-in-out;
    }
  
    a:hover:before {
      width: 100%;
    }
  
    .slider {
      position: absolute;
      display: block;
      left: 0;
      top: 90%;
      margin: 0 auto;
      height: 1.5px;
      background-color: var(--color-border-secondary);
      width: 0%;
      transition: width 0.2s ease;
    }
  </style>
  