---
const { bg } = Astro.props;
---

<nav class:list={["sticky top-0", bg || "bg-white"]}>
  <div id="logo">logo</div>
  <div id="my-name" class="hidden md:flex">Ray Xia</div>
  <ul class="menu flex gap-4 md:gap-8 text-sm">
    <li class=""><a href="/" class="py-2 hover:">Projects</a></li>
    <li class=""><a href="/about/" class="py-2 hover:">About</a></li>
  </ul>
</nav>

<style>
  nav {
    font-family: "TT Fors";
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 0.8rem 1rem 1rem;
  }

  .bg-white {
    background-color: #fff;
  }

  ul {
    justify-content: flex-end;
    list-style: none;
  }

  li {
    text-transform: uppercase;
    margin: 0;
  }

  #my-name {
    font-family: "LT Cushion";
    text-transform: uppercase;
    font-weight: 450;
    position: absolute;
    left: calc(50% - 25px);
  }


</style>
