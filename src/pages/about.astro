---
import "../styles/global.css";
import "../styles/project.css";
import AboutLayout from "../layouts/AboutLayout.astro";
import Resume from "../components/Resume.astro";

const pageTitle = "About";

const identity = {
  firstName: "Sarah",
  country: "Canada",
  occupation: "Technical Writer",
  hobbies: ["photography", "birdwatching", "baseball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = false;
const goal = 3;
---

<AboutLayout>
  <main class="w-full mt-16 mb-32 md:mt-12 mb-16 px-6">
    <!-- Profile & About -->
    <div
      class="category md:grid md:grid-cols-2 w-full relative gap-2 mb-32"
      id="projects"
    >
      <div class="category-label md:col-span-1">
        <div class="">
          <div class="profile-container block relative mb-4">
            <img
              id="profile-img"
              src="/images/about/profile-pic.jpg"
              alt="Profile image"
            />
          </div>
        </div>
      </div>
      <div id="about-me" class="md:col-span-1">
        <h1 class="mb-2">
          Xia <span class="text-sm italic"
            >(pronounced “shee-ah,” with your lower jaw slightly forward)</span
          >
        </h1>

        <h2 class="">Product Designer + Design Engineer</h2>

        <p class="">
          Hi there, I’m Xia. I love playing around with tools and thinking about
          why they’re made the way they are.
        </p>

        <!-- Background Paragraph -->
        <p class="">
          My background is in graphic design, and I got very into bringing
          service innovations to life through designing apps, websites, AI
          chatbots, and caregiving experiences for small and large companies.
        </p>

        <!-- Current Study Paragraph -->
        <p class="">
          I’m currently pursuing a master’s degree in human-computer interaction
          at Carnegie Mellon, where I’m learning how to make AI-powered products
          more responsible and explainable.
        </p>

        <!-- Motivation Paragraph -->
        <p class="">
          But beyond all, my motivation comes from being endlessly inquisitive
          about the world and helping make others' dreams come true.
        </p>
      </div>
    </div>

    <!-- Resume -->
    <div
      class="category md:grid md:grid-cols-2 w-full relative gap-2"
      id="resume"
    >
      <div class="category-label md:col-span-1 pt-4">
        <div class="sticky top-24 block relative mb-4">
          <div>
            <div>Resume</div>
            <a
              href="/pdfs/ray_xia_resume.pdf"
              download
              class="inline-block button-sm"
            >
              Download Resume
            </a>
          </div>
        </div>
      </div>
      <Resume />
    </div>
  </main>
</AboutLayout>

<style>
  #about-me {
    max-width: 28rem;
  }

  #resume {
    border-top: 1.5px solid var(--color-border-secondary);
  }

  .button-sm {
    text-transform: uppercase;
    margin: 0;
    font-size: 0.8rem;
    color: var(--color-text-secondary);
    border-bottom: 1.5px solid var(--color-border-secondary);
  }

  .button-sm:hover {
    color: var(--color-text-main);
    border-bottom: 1.5px solid var(--color-border-main);
  }

  @media screen and (min-width: 768px) {
    .profile-container {
      right: 4vw;
    }
    #profile-img {
      max-height: 100%;
      object-fit: cover;
      object-position: center;
    }
  }

  @media screen and (min-width: 1024px) {
    #profile-img {
      width: 85%;
      max-height: 800px;
    }
  }
</style>
